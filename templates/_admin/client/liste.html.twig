
{% block page_content %}
   
    <div class="row">
        <div class="col-sm-12">
            <div id="grid-{{ id_type_client }}" class="grid-dt-wrapper">Chargement....</div>
        </div>
    </div>
       
{% endblock %}


{% block java %}
    <script src="{{ asset('assets/js/datatable.js') }}"></script>
    <script> 
        $(function() { 
                 const type_client_id = "{{ id_type_client }}";
              $('#grid-' + type_client_id).initDataTables({{ datatable_settings(datatable) }}, {
                  searching: true,
                  ajaxUrl: "{{ path(app.request.attributes.get('_route'), {id: id_type_client}) }}",
                  language: {
                      url:  asset_base_path + "/js/i18n/French.json"
                  },
              });
        });
    </script>
{% endblock %}
