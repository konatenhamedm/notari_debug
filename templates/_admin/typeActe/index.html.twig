{% extends '_admin/_includes/index.html.twig' %}

{% block titre %}{{ menu.getRoute }}{% endblock %}

{% block page_content %}

    {% set new = menu.getRoute %}
    <!-- PAGE-HEADER -->
    <div class="page-header" style="margin-top:-0.1rem">
        <h1 class="page-title">{{ "Types actes" |capitalize }}</h1>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('typeActe') }}">LISTE DES TYPES ACTES</a></li>{#
                <li class="breadcrumb-item active" aria-current="page">{{ "NOUVEAU CLIENT" | capitalize }}</li>#}
            </ol>
        </div>

    </div>
    <!-- PAGE-HEADER END -->
    <!-- Row -->
    <div class="row row-sm" style="margin-top:-1rem">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-md-8">
                        <h3 class="card-title">{{ titre | capitalize }}</h3>
                    </div>
                    <div class="col-md-4">
                        <div class="btn-group offset-8">
                        <a class="btn btn-secondary bg-secondary-gradient offset-7"  href="{{ path('typeActe_new') }}" data-bs-toggle="modal" data-bs-target="#extralargemodal">
                            <i class="fe fe-plus"></i>Nouveau
                        </a>
                        <a class="btn btn-secondary bg-success-gradient offset-7"  href="{{ path('type_addFile_new') }}" data-bs-toggle="modal" data-bs-target="#extralargemodal">
                            <i class="fe fe-download"></i>Upload
                        </a>
                    </div>
                    </div>

                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-12">
                            <div id="grid-type_acte" class="grid-dt-wrapper">Chargement....</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}

  <script src="{{ asset('assets/js/datatable.js') }}"></script>
  <script>
    $(function () {
      $('#grid-type_acte').initDataTables({{ datatable_settings(datatable) }}, {
        searching: true,
        ajaxUrl: "{{ path('typeActe') }}",
        language: {
          url: asset_base_path + "/js/i18n/French.json"
        }
      });
    });
  </script>

{% endblock %}
