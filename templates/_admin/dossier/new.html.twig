
{% block page_content %}

    <div class="modal-header ">
        <h5 class="modal-title" >NOUVEAU-{{ titre | upper  }}</h5>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    {% form_theme form 'widget/fields-custom.html.twig' %}
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body">
        <div class="contenu" style="margin-top: -10px">
            <div class="row">
                <div class="col-md-12">
                    {{ include('_includes/ajax/response.html.twig') }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 ">
                    {{ form_row(form.dateCreation) }}
                </div>
                <div class="col-md-6 ">
                    {{ form_row(form.numeroOuverture) }}
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 ">
                    {{ form_row(form.numeroC) }}
                </div>
                <div class="col-md-6 ">
                    {{ form_row(form.repertoire) }}
                </div>

            </div>
            <div class="row">
                <div class="col-md-12"> {{ form_row(form.objet) }}</div>
            </div>
            <div class="row">
                <div class="col-md-12"> {{ form_row(form.description) }}</div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
       <button class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        <button class="btn btn-primary btn-ajax">Valider</button>
    </div>
    {{ form_end(form) }}


{% endblock %}
