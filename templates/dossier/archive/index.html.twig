{% block page_content %}
    <div class="row">
        <div class="col-sm-12">
            <div id="grid_app_dossier_archive_{{ type_acte }}" class="grid-dt-wrapper">Chargement....</div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/datatable.js') }}"></script>
    <script> 
        $(function() { 
            const type_acte = "{{ type_acte }}";
            $('#grid_app_dossier_archive_' + type_acte).initDataTables({{ datatable_settings(datatable) }}, {
                searching: true,
                ajaxUrl: "{{ path('app_dossier_archive_index', {type_acte: type_acte}) }}",
                language: {
                    url: asset_base_path + "/js/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}
